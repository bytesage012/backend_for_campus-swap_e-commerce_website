# Application Environment
NODE_ENV=development
PORT=3001

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/campus_swap"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRY=7d

# Payment Gateway (Paystack)
PAYSTACK_SECRET_KEY="sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
PAYSTACK_PUBLIC_KEY="pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# File Uploads
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=5242880

# Frontend Configuration
FRONTEND_URL="http://localhost:3000"
SERVER_URL="http://localhost:3001"

# Email Configuration (Optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"

# Redis Configuration (Optional - for caching/queues)
REDIS_URL="redis://localhost:6379"

# AWS S3 Configuration (Optional - for file storage)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_S3_BUCKET="campus-swap-uploads"
AWS_REGION="us-east-1"

# Logging
LOG_LEVEL="info"

# Features
ENABLE_ESCROW=true
ENABLE_SMART_CONTRACTS=true
ENABLE_BULK_OPERATIONS=true
ENABLE_ANALYTICS=true

# Platform Fee Configuration
# Set PLATFORM_FEE_ENABLED to 'false' to disable platform fees entirely
# Default: true (5% fee is deducted from each sale)
PLATFORM_FEE_ENABLED=true

# Platform fee percentage as decimal (0.05 = 5%, 0.03 = 3%, etc)
# Default: 0.05 (5%)
PLATFORM_FEE_PERCENTAGE=0.05

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Withdrawal Configuration
MIN_WITHDRAWAL_AMOUNT=100
MAX_WITHDRAWAL_AMOUNT=500000
WITHDRAWAL_FEE_PERCENTAGE=0.015
MIN_WITHDRAWAL_FEE=50

# Admin Configuration
ADMIN_EMAIL="admin@campusswap.local"
ADMIN_PASSWORD="change-this-in-production"
