# Production Environment Configuration
# Copy this file to .env and update with production values

# Application
NODE_ENV=production
PORT=5000

# Database
DATABASE_URL=postgresql://user:password@prod-db-host:5432/campus_swap
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_TIMEOUT=5000

# Authentication
JWT_SECRET=your-very-long-random-jwt-secret-min-32-chars-change-this
JWT_EXPIRY=24h
SESSION_SECRET=your-very-long-random-session-secret-min-32-chars

# Server URLs
FRONTEND_URL=https://yourdomain.com
SERVER_URL=https://api.yourdomain.com
ADMIN_URL=https://admin.yourdomain.com

# Payment Gateway (Paystack)
PAYSTACK_SECRET_KEY=sk_live_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_live_your_paystack_public_key

# File Upload Configuration
UPLOAD_DIR=/var/app/uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# AWS S3 (Optional - for cloud storage)
USE_S3=true
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=campus-swap-production

# Redis Cache
REDIS_URL=redis://prod-redis-host:6379
REDIS_PASSWORD=your_redis_password

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Campus Swap

# Logging
LOG_LEVEL=info
LOG_DIR=/var/log/app
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14d

# Monitoring
SENTRY_DSN=https://your-sentry-url
DATADOG_API_KEY=your_datadog_api_key

# Security
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100
CORS_ENABLED=true
CORS_ORIGINS=https://yourdomain.com,https://admin.yourdomain.com

# Features
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_REAL_TIME_CHAT=true
ENABLE_SMART_CONTRACTS=true
ENABLE_BULK_OPERATIONS=true

# Withdrawal Configuration
MIN_WITHDRAWAL_AMOUNT=100
MAX_WITHDRAWAL_AMOUNT=500000
WITHDRAWAL_FEE_PERCENTAGE=1.5
WITHDRAWAL_PROCESSING_TIME_HOURS=24

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your_secure_admin_password
ADMIN_API_KEY=your_admin_api_key

# Database Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Security Headers
ENABLE_HELMET=true
ENABLE_CORS=true
ENABLE_RATE_LIMITING=true

# Content Security Policy
CSP_ENABLED=true
CSP_DIRECTIVE_SCRIPT=self
CSP_DIRECTIVE_STYLE=self unsafe-inline
CSP_DIRECTIVE_IMG=self data: https:

# API Documentation
SWAGGER_ENABLED=false
SWAGGER_USERNAME=admin
SWAGGER_PASSWORD=your_swagger_password

# Third-party Integrations
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
